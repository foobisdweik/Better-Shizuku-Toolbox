<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Global dark-mode overrides for the engineering dashboard aesthetic -->

    <Style Selector="Window">
        <Setter Property="Background" Value="#1E1E1E" />
        <Setter Property="Foreground" Value="#E0E0E0" />
    </Style>

    <Style Selector="TextBlock">
        <Setter Property="Foreground" Value="#E0E0E0" />
    </Style>

    <Style Selector="TextBlock.heading">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <Style Selector="TextBlock.value-large">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontFamily" Value="Consolas, JetBrains Mono, monospace" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style Selector="TextBlock.value-unit">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontFamily" Value="Consolas, JetBrains Mono, monospace" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
        <Setter Property="Margin" Value="4,0,0,4" />
        <Setter Property="Opacity" Value="0.7" />
    </Style>

    <Style Selector="Border.card">
        <Setter Property="Background" Value="#2D2D2D" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="4" />
    </Style>

    <Style Selector="Border.sidebar">
        <Setter Property="Background" Value="#252525" />
        <Setter Property="Width" Value="56" />
    </Style>

    <Style Selector="Border.statusbar">
        <Setter Property="Background" Value="#181818" />
        <Setter Property="Padding" Value="8,4" />
    </Style>

    <Style Selector="Button.nav-btn">
        <Setter Property="Width" Value="44" />
        <Setter Property="Height" Value="44" />
        <Setter Property="Margin" Value="6,4" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#AAAAAA" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="FontSize" Value="18" />
    </Style>

    <Style Selector="Button.nav-btn:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#3A3A3A" />
    </Style>

    <Style Selector="Button.nav-btn.active">
        <Setter Property="Background" Value="#3A3A3A" />
        <Setter Property="Foreground" Value="#5B9BD5" />
    </Style>
</Styles>
